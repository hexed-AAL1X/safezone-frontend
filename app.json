{
  "expo": {
    "name": "safezone",
    "slug": "safezone",
    "version": "1.0.0-beta",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "safezone",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "description": "SafeZone - Tu seguridad personal 24/7. Alertas SOS, ubicación en tiempo real, taxis verificados y comunidad de seguridad.",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeZone necesita tu ubicación para mostrarte en el mapa y compartirla con tus contactos de emergencia.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeZone necesita tu ubicación para alertas de emergencia y compartir tu posición en tiempo real.",
        "NSMicrophoneUsageDescription": "SafeZone necesita acceso al micrófono para grabar audio durante emergencias SOS."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png",
        "backgroundColor": "#E6F4FE"
      },
      "package": "com.safezone.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SafeZone necesita tu ubicación para alertas de emergencia y compartir tu posición en tiempo real."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Inter-Black.ttf",
            "./assets/fonts/Inter-Regular.ttf",
            "./assets/fonts/Montserrat-Bold.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "235198b0-78b3-44bc-bc63-190a6dcda49a"
      }
    }
  }
}
